.skill-ps{
    margin:20rpx;
    padding:20rpx;
    background: #fff;
}
.skill-top{
    font-size: 13px;
    display: block;
}
.skill-name{
    width: 90%;
    color: #2f2f2f;
    display: inline-block;
}
.delete{
    color: #ff5454;
    width: 10%;
    float: right;
    text-align: right;
}
.input{
    background: #f3bf4f;
    font-size:16px;
    height: 35px;
    line-height: 35px;
    text-align: center;
    color: #000;
    width: 90%;
    margin: 20px auto;
}
.skill-line{
    display: block;
    background: #ebebeb;
    height: 7px;
    margin: 45px 0 27px 0;
    border-radius:7px;
    position: relative;
}
.skill-tips{
    display: block;
    background: url("../../img/du.png") no-repeat right center;
    background-size: 25px 22px;
    height: 22px;
    width: 80%;
    position: absolute;
    top:-8px;
}
.skill-line::before{
     content: "";
     height: 7px;
     border-radius:7px;
     position: absolute;
     background: #f3bf4f;
     width: 80%;
 }
.skill-image{
    display: block;
    position: absolute;
    background: url("../../img/sure.png") no-repeat right center;
    background-size: 100%;
    width: 32px;
    height: 25px;
    right: -5px;
    top:-25px;
}